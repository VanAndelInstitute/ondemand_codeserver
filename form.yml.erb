---
cluster: "hpc"
form:
  - working_dir
  - sh_modules
  - sh_partition
  - bc_num_hours

attributes:

  sh_modules:
    label: "Additional modules (optional)"
    help: |
        <small>Space separated list of additional modules to load</br/>

  working_dir:
    label: "Working Directory (optional)"
    data-filepicker: true
    data-target-file-type: dirs  # Valid values are: files, dirs, or both
    readonly: false
    help: "Specify a project directory to start VS Code in; defaults to your /home/user.name if not specified"

  sh_partition:
    label: "Partition"
    value: "short"
    required: true
    help: "For example: quick short bigmem long, or your private nodes."

  bc_num_hours:
    label: "Runtime (in hours)"
